.element


  %h3 Parameters    

  - # Conflicting parameters are okay here, since we just want to warn
  - unless @node.compile_class_parameters(resource, true).blank?
    - if @node.errors.on(:classParameters)
      %p.error
        %strong Warning:
        The following parameters have multiple conflicting values:
        = h [*@node.errors.on(:classParameters).map { |error| error.gsub(%r{^.*/}, "")}].join(", ")
    %table.inspector
      %thead
        %tr 
          %th{:scope => :col} Key 
          %th{:scope => :col} Value
          %th{:scope => :col} Source
      %tbody
        - @node.compile_class_parameters(resource, true).each do |param|
          %tr
            %td{:style => ("background-color: pink;" if param[:sources].size > 1)}
              %tt= h param[:name]
            %td
              %tt= h param[:value]
            %td
              - if param[:sources] == Set[resource]
                = h.resource.name
              -else
                = param[:sources].map{|source| link_to(h(source.name),node_group_path(source.id))}.join(", ")
  - else
    = describe_no_matches_as 'No parameters'
